<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewData["Title"] | İdeio Creative</title>
    <meta name="description" content="@ViewData["MetaDescription"]" />
    <meta name="keywords" content="@ViewData["MetaKeywords"]" />

    @* <link rel="icon" href="@Url.Content("~/img/fav/dark-favicon.ico")" sizes="any"> *@

    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content("~/img/fav/dark-favicon-32x32.png")" media="(prefers-color-scheme: light)">
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content("~/img/fav/dark-favicon-16x16.png")" media="(prefers-color-scheme: light)">
    <link rel="apple-touch-icon" href="@Url.Content("~/img/fav/dark-apple-touch-icon.png")" media="(prefers-color-scheme: light)">

    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content("~/img/fav/light-favicon-32x32.png")" media="(prefers-color-scheme: dark)">
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content("~/img/fav/light-favicon-16x16.png")" media="(prefers-color-scheme: dark)">
    <link rel="apple-touch-icon" href="@Url.Content("~/img/fav/light-apple-touch-icon.png")" media="(prefers-color-scheme: dark)">

    <link rel="manifest" href="@Url.Content("~/img/fav/site.webmanifest")">

    <link rel="stylesheet" href="@Url.Content("~/assets/css/bootstrap.min.css")">

    <link rel="stylesheet" href="@Url.Content("~/assets/css/all.min.css")">

    <link rel="stylesheet" href="@Url.Content("~/assets/css/magnific-popup.css")">

    <link rel="stylesheet" href="@Url.Content("~/assets/css/nice-select.css")">

    <link rel="stylesheet" href="@Url.Content("~/assets/css/swiper.min.css")">

    <link rel="stylesheet" href="@Url.Content("~/assets/css/aos.css")">

    <link rel="stylesheet" href="@Url.Content("~/assets/css/main.css")">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flag-icons/css/flag-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body class="position-relative bg2-clr">

    @await Component.InvokeAsync("Navbar")
    
     
            @RenderBody()
       
    <!-- _Layout.cshtml dosyanızda body etiketi kapandıktan sonra veya uygun bir yerde ekleyebilirsiniz -->
    <a href="https://wa.me/905544387416?text=Merhaba%2C%20nas%C4%B1l%20yard%C4%B1m%20edebilirim?"
       target="_blank"
       class="whatsapp-float"
       title="WhatsApp ile iletişime geçin">
        <!-- FontAwesome kullanarak ikon eklemek isterseniz: -->
        <i class="bi bi-whatsapp"></i>
        <!-- Veya local bir resim kullanmak için:
        <img src="~/images/whatsapp-icon.png" alt="WhatsApp İkonu" />
        -->
    </a>

    @await Component.InvokeAsync("Footer")

    <!-- js Jquery start -->
    <script src="@Url.Content("~/assets/js/jquery.js")"></script>

    <!-- js Bootstrap start -->
    <script src="@Url.Content("~/assets/js/bootstrap.bundle.min.js")"></script>

    <!-- js Waypoints start -->
    <script src="@Url.Content("~/assets/js/jquery.waypoints.js")"></script>

    <!-- js Magnific popup start -->
    <script src="@Url.Content("~/assets/js/magnific-popup.js")"></script>

    <!-- js Nice Select start -->
    <script src="@Url.Content("~/assets/js/jquery.nice-select.min.js")"></script>

    <!-- js Swiper start -->
    <script src="@Url.Content("~/assets/js/swiper.js")"></script>

    <!-- js CounterUp start -->
    <script src="@Url.Content("~/assets/js/jquery.counterup.min.js")"></script>

    <!-- js AOS Animation start -->
    <script src="@Url.Content("~/assets/js/aos.js")"></script>

    <!-- js Tilt start -->
    <script src="@Url.Content("~/assets/js/vanilla-tilt.min.js")"></script>

    <!-- js Main start -->
    <script src="@Url.Content("~/assets/js/main.js")"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
