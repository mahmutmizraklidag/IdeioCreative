@model IEnumerable<Team>
@{
    ViewData["Title"] = "Ekibimiz";
    ViewData["MetaDescription"] = "Ekibimiz ile tanışın";
    ViewData["MetaKeywords"] = "İdeio Creative";

}
<!-- Main start -->
<main class="main">

    <!-- Breadcrumnd Banner -->
    <section class="breadcrumnd-banner position-relative">
        <div class="container">
            <div class="row g-5 justify-content-center">
                <div class="col-lg-7">
                    <div class="breadcrumnd-content text-center">
                        <h1 class="white mb-xxl-10 mb-xl-8 mb-6" data-aos="zoom-in-left" data-aos-duration="1800">
                            Ekibimiz
                        </h1>
                        <ul class="breadcrumnd d-inline-flex align-items-center gap-2 pra-border radius100 py-xxl-3 py-2 px-xxl-4 px-4"
                            data-aos="zoom-in-right" data-aos-duration="2000">
                            <li>
                                <a asp-controller="Home" asp-action="Index" class="text-uppercase htheme">
                                    Anasayfa
                                </a>
                            </li>
                            <li>
                                <span class="rot60 d-inline-block">
                                    <i class="fas fa-arrow-up"></i>
                                </span>
                            </li>
                            <li class="theme-clr">
                                Ekibimiz
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!--Element-->
        <img src="assets/img/element/cmn-dost.png" alt="img" class="cmn-dots">
        <div class="cmn-svg-shape cmn-svg">
            <svg width="280" height="280" viewBox="0 0 211 211" fill="none"
                 xmlns="http://www.w3.org/2000/svg">

                <!-- Üst bar -->
                <rect x="80" y="18" width="51" height="18"
                      fill="url(#paint0_linear_6584_3026)" />

                <!-- Konuşma balonu -->
                <path d="M20 60 H191 V170 H105 L55 200 V170 H20 Z"
                      stroke="url(#paint0_linear_6584_3026)"
                      stroke-width="12"
                      fill="none" />

                <!-- Ortadaki halka -->
                <circle cx="105.5"
                        cy="118"
                        r="34"
                        stroke="url(#paint0_linear_6584_3026)"
                        stroke-width="14"
                        fill="none" />

                <defs>
                    <linearGradient id="paint0_linear_6584_3026"
                                    x1="416.867" y1="-216.267"
                                    x2="8.49998" y2="192.1"
                                    gradientUnits="userSpaceOnUse">
                        <stop offset="0" stop-color="#E3FF04" />
                        <stop offset="1" stop-color="#FF7425" stop-opacity="0" />
                    </linearGradient>
                </defs>
            </svg>


        </div>
    </section>
    <!-- Breadcrumnd Banner -->
    <section class="team-section pt-space pb-space">
        <div class="container">
            <div class="row g-xxl-7 g-xl-5 g-4 justify-content-center">

                @{
                    int index = 1;
                }

                @foreach (var team in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mt-lg-18"
                         data-aos="fadein"
                         data-aos-duration="1400">

                        <div class="team-card01 tilt overflow-hidden"
                             style="border: 1px solid rgba(255, 255, 255, 0.15); border-radius: 12px; padding: 15px;">

                            <div class="thumb overflow-hidden w-100 position-relative mb-xxl-7 mb-xl-6 mb-5">
                                <img src="/img/@team.Image" alt="img" class="w-100" style="border-radius: 8px;">
                            </div>

                            <div class="content">
                                <span class="bspan-clr position-relative mb-xxl-4 mb-xxl-3 mb-3">
                                    @team.Position
                                </span>
                                <h5 class="white-clr whitehover">
                                    <a href="#" class="white-clr whitehover">
                                        @team.Name
                                    </a>
                                </h5>
                            </div>
                        </div>
                    </div>

                    index++;
                }

            </div>
        </div>
    </section>

</main>
<!-- Main End -->