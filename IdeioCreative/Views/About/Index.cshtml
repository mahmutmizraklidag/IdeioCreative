                                <a asp-controller="About" asp-action="Index" class="text-uppercase htheme">
                                    Anasayfa
                                </a>
                            </li>
                            <li>
                                <span class="rot60 d-inline-block">
                                    <i class="fas fa-arrow-up"></i>
                                </span>
                            </li>
                            <li class="theme-clr">
                                Hakkımızda
                            </li>
                        </ul>

                        <div class="hero-sponsor mt-5">
                            <div class="sponsor-inner row row-cols-2 row-cols-md-4 row-cols-lg-6 g-4 justify-content-center align-items-center mb-6">

