@model AboutViewModel
@{
    var site = DataRequestModel.SiteSetting;

    ViewData["Title"] = string.IsNullOrEmpty(Model.About?.MetaTitle)
        ? "Hakkımızda"
        : Model.About.MetaTitle;

    ViewData["MetaDescription"] = string.IsNullOrEmpty(Model.About?.MetaDescription)
        ? (site?.MetaDescription ?? "Hakkımızda")
        : Model.About.MetaDescription;

    ViewData["MetaKeywords"] = string.IsNullOrEmpty(Model.About?.Keywords)
        ? (site?.Keywords ?? "Hakkımızda")
        : Model.About.Keywords;
}
 <!-- Main start -->
