@{
    ViewData["Title"] = "İletişim Formları";
}

<div class="container my-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-white py-3">
            <h2 class="fw-bold text-primary mb-0 fs-4">
                <i class="bi bi-inbox-fill me-2"></i> Gelen Mesajlar
            </h2>
        </div>
        <div class="card-body p-3">
            <div class="table-responsive">
                <table id="messagesTable" class="table table-hover table-striped align-middle w-100">
                    <thead class="table-light">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Konu</th>
                            <th>Mesaj</th>
                            <th class="text-center" style="width: 100px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#messagesTable').DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    // DÜZELTME 1: URL Admin alanına ve doğru Controller'a yönlendirildi
                    "url": "/admin/ContactForms/GetContactMessages",
                    "type": "POST",
                    "datatype": "json"
                },
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json"
                },
                "columns": [
                    { "data": "name", "name": "Name", "autoWidth": true },
                    { "data": "email", "name": "Email", "autoWidth": true },
                    { "data": "phone", "name": "Phone", "autoWidth": true },
                    { "data": "subject", "name": "Subject", "autoWidth": true },
                    {
                        "data": "message",
                        "name": "Message",
                        "render": function (data, type, row) {
                            if (data == null) return "";
                            return type === 'display' && data.length > 50 ?
                                data.substr(0, 50) + '...' :
                                data;
                        }
                    },
                    {
                        "data": "id",
                        "render": function (data, type, row) {
                            // DÜZELTME 2: Linklere '/admin/ContactForms/' eklendi
                            return `
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="/admin/ContactForms/Details/${data}" class="btn btn-outline-primary" title="Oku">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="/admin/ContactForms/Delete/${data}" class="btn btn-outline-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            `;
                        },
                        "orderable": false,
                        "className": "text-center"
                    }
                ],
                "order": [[0, "desc"]]
            });
        });
    </script>
}