@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="container-fluid py-4">
    <!-- Üst başlık -->
    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
        <div>
            <h4 class="mb-1 fw-bold">Yönetim Paneli</h4>
            <div class="text-muted">İdeio Creative içeriklerinizi hızlıca yönetin.</div>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a asp-area="Admin" asp-controller="Services" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Yeni Hizmet
            </a>
            <a asp-area="Admin" asp-controller="Teams" asp-action="Create" class="btn btn-outline-secondary">
                <i class="bi bi-person-plus me-1"></i> Ekip Üyesi Ekle
            </a>
            <a asp-area="Admin" asp-controller="SiteSettings" asp-action="Index" class="btn btn-outline-dark">
                <i class="bi bi-gear me-1"></i> Site Ayarları
            </a>
        </div>
    </div>

    <!-- KPI kartları -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small">Hizmetler</div>
                        <div class="fs-4 fw-bold">@ViewBag.ServicesCount</div>
                        <div class="small text-muted">Aktif içerikler</div>
                    </div>
                    <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center" style="width:44px;height:44px;">
                        <i class="bi bi-journal-text fs-5 text-primary"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a asp-area="Admin" asp-controller="Services" asp-action="Index" class="text-decoration-none small fw-semibold">
                        Yönet <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small">Ekip</div>
                        <div class="fs-4 fw-bold">@ViewBag.TeamsCount</div>
                        <div class="small text-muted">Profil yayında</div>
                    </div>
                    <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex align-items-center justify-content-center" style="width:44px;height:44px;">
                        <i class="bi bi-people fs-5 text-success"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a asp-area="Admin" asp-controller="Teams" asp-action="Index" class="text-decoration-none small fw-semibold">
                        Yönet <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small">Referanslar</div>
                        <div class="fs-4 fw-bold">@ViewBag.ReferencesCount</div>
                        <div class="small text-muted">Portföy öğesi</div>
                    </div>
                    <div class="rounded-circle bg-warning bg-opacity-10 d-inline-flex align-items-center justify-content-center" style="width:44px;height:44px;">
                        <i class="bi bi-award fs-5 text-warning"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a asp-area="Admin" asp-controller="References" asp-action="Index" class="text-decoration-none small fw-semibold">
                        Yönet <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small">İletişim</div>
                        <div class="fs-4 fw-bold">@ViewBag.ContactsCount</div>
                        <div class="small text-muted">Yeni form</div>
                    </div>
                    <div class="rounded-circle bg-danger bg-opacity-10 d-inline-flex align-items-center justify-content-center" style="width:44px;height:44px;">
                        <i class="bi bi-envelope-paper fs-5 text-danger"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a asp-area="Admin" asp-controller="ContactForms" asp-action="Index" class="text-decoration-none small fw-semibold">
                        İncele <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı erişim + Son aktiviteler -->
    <div class="row g-3">
        <!-- Hızlı işlemler -->
        <div class="col-12 col-xl-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pb-0">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="fw-bold">Hızlı Erişim</div>
                        <span class="badge text-bg-light border">Kısayollar</span>
                    </div>
                </div>
                <div class="card-body pt-3">
                    <div class="list-group list-group-flush">
                        <a asp-area="Admin" asp-controller="Abouts" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <span><i class="bi bi-card-text me-2 text-primary"></i> Hakkımızda</span>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="Services" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <span><i class="bi bi-journal-text me-2 text-primary"></i> Hizmetler</span>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="SiteSettings" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <span><i class="bi bi-gear me-2 text-primary"></i> Site Ayarları</span>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="Teams" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <span><i class="bi bi-people me-2 text-primary"></i> Ekip</span>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <span><i class="bi bi-person-badge me-2 text-primary"></i> Kullanıcılar</span>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="References" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <span><i class="bi bi-award me-2 text-primary"></i> Referanslar</span>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="ContactForms" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <span><i class="bi bi-envelope-paper me-2 text-primary"></i> İletişim Formu</span>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Son aktiviteler -->
        <div class="col-12 col-xl-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0">
                    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2">
                        <div>
                            <div class="fw-bold">Son İşlemler</div>
                            <div class="text-muted small">Son güncellenen içerikler ve formlar</div>
                        </div>

                        <div class="input-group" style="max-width: 360px;">
                            <span class="input-group-text bg-light border-0"><i class="bi bi-search"></i></span>
                            <input class="form-control bg-light border-0" placeholder="Ara (başlık, kullanıcı, vb.)" />
                        </div>
                    </div>
                </div>

                <div class="card-body pt-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="small text-muted">
                                <tr>
                                    <th>Tür</th>
                                    <th>Başlık</th>
                                    <th>Durum</th>
                                    <th class="text-end">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span class="badge text-bg-primary">Hizmet</span></td>
                                    <td class="fw-semibold">Açık Hava ve Medya Planlama</td>
                                    <td><span class="badge text-bg-light border">Güncellendi</span></td>
                                    <td class="text-end">
                                        <a asp-area="Admin" asp-controller="Services" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                            Gör
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="badge text-bg-success">Ekip</span></td>
                                    <td class="fw-semibold">Yeni üye eklendi</td>
                                    <td><span class="badge text-bg-light border">Yayında</span></td>
                                    <td class="text-end">
                                        <a asp-area="Admin" asp-controller="Teams" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                            Gör
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="badge text-bg-warning">Referans</span></td>
                                    <td class="fw-semibold">Portföy görseli değişti</td>
                                    <td><span class="badge text-bg-light border">Güncellendi</span></td>
                                    <td class="text-end">
                                        <a asp-area="Admin" asp-controller="References" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                            Gör
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td><span class="badge text-bg-danger">İletişim</span></td>
                                    <td class="fw-semibold">Yeni mesaj: Teklif Talebi</td>
                                    <td><span class="badge text-bg-danger">Yeni</span></td>
                                    <td class="text-end">
                                        <a asp-area="Admin" asp-controller="ContactForms" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                                            İncele
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <hr class="my-4" />

                    <!-- Alt mini kartlar -->
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <div class="p-3 rounded-3 bg-light border">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <div class="fw-semibold">Site Ayarları Durumu</div>
                                        <div class="text-muted small">Meta alanları ve temel bilgiler</div>
                                    </div>
                                    <i class="bi bi-shield-check fs-4 text-success"></i>
                                </div>
                                <div class="mt-3 d-flex flex-wrap gap-2">
                                    <span class="badge text-bg-success">Meta OK</span>
                                    <span class="badge text-bg-success">Logo OK</span>
                                    <span class="badge text-bg-warning">Sosyal Linkler</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="p-3 rounded-3 bg-light border">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <div class="fw-semibold">Kullanıcı Yönetimi</div>
                                        <div class="text-muted small">Yetkiler & roller</div>
                                    </div>
                                    <i class="bi bi-person-lock fs-4 text-primary"></i>
                                </div>
                                <div class="mt-3">
                                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                        Kullanıcılara Git
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-footer bg-transparent border-0">
                    <div class="text-muted small">
                        Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
