@model IEnumerable<Team>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-journal-text me-2"></i> Personel Yönetimi
        </h2>

        <div class="d-flex gap-2">
            <button id="saveOrderBtn" type="button" class="btn btn-success shadow-sm">
                <i class="bi bi-save me-1"></i> Sıralamayı Kaydet
            </button>

            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Yeni Personel Ekle
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <div class="d-flex justify-content-between mb-3">
                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Personel ara...">
                </div>
                <span class="text-muted small align-self-center">@Model.Count() kayıt bulundu</span>
            </div>

            <div class="table-responsive">
                <table class="table align-middle table-hover">
                    <thead class="table-light">
                        <tr>
                            <th style="width:90px;">Görsel</th>
                            <th>Adı Soyadı</th>
                            <th>Görevi</th>
                            <th>Açıklama</th>
                            <th style="width:90px;">Sıra No</th>
                            <th style="width:170px;">Anasayfada Gösterilecek mi?</th>
                            <th style="width:90px;">Dil</th>
                            <th class="text-end" style="width:120px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody id="blogTable">
                        @foreach (var item in Model)
                        {
                            <tr data-id="@item.Id"
                                data-name="@item.Name"
                                data-position="@item.Position"
                                data-image="@item.Image"
                                data-description="@item.Description"
                                data-slug="@item.Slug"
                                data-ishomepage="@item.IsHomePage"
                                data-language="@((int)item.Language)">
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Image))
                                    {
                                        <img src="/img/@item.Image" alt="image" class="rounded" width="60" height="40" style="object-fit: cover;">
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Yok</span>
                                    }
                                </td>

                                <td>@item.Name</td>
                                <td>@item.Position</td>
                                <td>@Html.Raw(item.Description)</td>
                                <td class="order-no">@item.OrderNo</td>

                                <td>
                                    @if (item.IsHomePage)
                                    {
                                        <span class="badge bg-success">Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Hayır</span>
                                    }
                                </td>

                                <td>@item.Language</td>

                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-muted small mt-2">
                İpucu: Satırları sürükleyip bırakarak sıralamayı değiştirebilirsiniz.
            </div>
        </div>
    </div>
</div>
@Html.AntiForgeryToken()
@section Scripts {

    <!-- SortableJS (Drag & Drop) -->
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>

    <style>
        #blogTable tr {
            cursor: grab;
        }

            #blogTable tr:active {
                cursor: grabbing;
            }
    </style>

    <script>
        // Basit tablo arama
        document.getElementById("searchInput").addEventListener("keyup", function () {
            var value = this.value.toLowerCase();
            var rows = document.querySelectorAll("#blogTable tr");
            rows.forEach(function (row) {
                row.style.display = row.textContent.toLowerCase().includes(value) ? "" : "none";
            });
        });

        const tableBody = document.getElementById("blogTable");

        // Drag & Drop
        const sortable = new Sortable(tableBody, {
            animation: 150,
            ghostClass: "bg-light",
            onEnd: function () {
                updateOrderNumbers();
            }
        });

        function updateOrderNumbers() {
            document.querySelectorAll("#blogTable tr").forEach((row, index) => {
                const orderCell = row.querySelector(".order-no");
                if (orderCell) orderCell.innerText = index + 1;
            });
        }

        // Kaydet
        document.getElementById("saveOrderBtn").addEventListener("click", function () {

            // Not: arama yapıp bazı satırları gizlediysen, yine de tüm satırlar sayılır.
            // İstersen sadece görünenleri kaydedecek şekilde de düzenleriz.

                   let teamList = [];

        document.querySelectorAll("#blogTable tr").forEach((row, index) => {
            teamList.push({
                id: parseInt(row.dataset.id),
                name: row.dataset.name,
                position: row.dataset.position,
                image: row.dataset.image || null,
                description: row.dataset.description || null,
                slug: row.dataset.slug,
                orderNo: index + 1,
                isHomePage: row.dataset.ishomepage === "True" || row.dataset.ishomepage === "true",
                language: parseInt(row.dataset.language)
            });
        });

        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch("@Url.Action("UpdateOrder", "Teams")", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
                "RequestVerificationToken": token
            },
            body: JSON.stringify(teamList)
        })
        .then(res => res.ok ? res.json() : Promise.reject(res))
        .then(_ => alert("Sıralama başarıyla güncellendi"))
        .catch(err => { console.error(err); alert("Bir hata oluştu"); });
        });
    </script>
}
