@model SiteSetting

@{
    ViewData["Title"] = "Site Ayarı Düzenle";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Site Ayarı Düzenle</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label fw-semibold"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Telefon giriniz" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email giriniz" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label fw-semibold"></label>
                        <input asp-for="Address" class="form-control" placeholder="Adres giriniz" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="mapLink" class="form-label fw-semibold"></label>
                        <input asp-for="mapLink" class="form-control" placeholder="Harita Linki giriniz" />
                        <span asp-validation-for="mapLink" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Facebook" class="form-label fw-semibold"></label>
                        <input asp-for="Facebook" class="form-control" placeholder="Facebook" />
                        <span asp-validation-for="Facebook" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Instagram" class="form-label fw-semibold"></label>
                        <input asp-for="Instagram" class="form-control" placeholder="Instagram" />
                        <span asp-validation-for="Instagram" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Twitter" class="form-label fw-semibold"></label>
                        <input asp-for="Twitter" class="form-control" placeholder="Twitter" />
                        <span asp-validation-for="Twitter" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LinkedIn" class="form-label fw-semibold"></label>
                        <input asp-for="LinkedIn" class="form-control" placeholder="LinkedIn" />
                        <span asp-validation-for="LinkedIn" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="YouTube" class="form-label fw-semibold"></label>
                        <input asp-for="YouTube" class="form-control" placeholder="YouTube" />
                        <span asp-validation-for="YouTube" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SmtpServer" class="form-label fw-semibold"></label>
                        <input asp-for="SmtpServer" class="form-control" placeholder="SMTP Sunucusu" />
                        <span asp-validation-for="SmtpServer" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SmtpPort" class="form-label fw-semibold"></label>
                        <input asp-for="SmtpPort" class="form-control" placeholder="SMTP Portu" />
                        <span asp-validation-for="SmtpPort" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SmtpEmail" class="form-label fw-semibold"></label>
                        <input asp-for="SmtpEmail" class="form-control" placeholder="SMTP Gönderen Mail" />
                        <span asp-validation-for="SmtpEmail" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EmailPassword" class="form-label fw-semibold"></label>
                        <input asp-for="EmailPassword" class="form-control" placeholder="Mail Şifresi" />
                        <span asp-validation-for="EmailPassword" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Keywords" class="form-label fw-semibold"></label>
                        <input asp-for="Keywords" class="form-control" placeholder="Anahtar Kelimeler Giriniz..." />
                        <span asp-validation-for="Keywords" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MetaTitle" class="form-label fw-semibold"></label>
                        <input asp-for="MetaTitle" class="form-control" placeholder="SEO başlığı" />
                        <span asp-validation-for="MetaTitle" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MetaDescription" class="form-label fw-semibold"></label>
                        <input asp-for="MetaDescription" class="form-control" placeholder="Kısa açıklama (SEO)" />
                        <span asp-validation-for="MetaDescription" class="text-danger small"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="YouTubeLink" class="form-label fw-semibold"></label>
                        <input asp-for="YouTubeLink" class="form-control" placeholder="Tanıtım Linki" />
                        <span asp-validation-for="YouTubeLink" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Language" class="form-label fw-semibold"></label>
                        <select asp-for="Language" class="form-select" asp-items="Html.GetEnumSelectList<Language>()"></select>
                        <span asp-validation-for="Language" class="text-danger small"></span>
                    </div>



                    <div class="col-md-12">
                        <label asp-for="Logo" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <input asp-for="Logo" type="file" class="form-control" id="imageInput" />
                        </div>
                        <div class="mt-2">
                            <img id="previewImage" src="#" alt="Önizleme" class="rounded border d-none" width="200" />
                        </div>
                        <span asp-validation-for="Logo" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="BannerImage" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <input asp-for="BannerImage" type="file" class="form-control" id="imageInput2" />
                        </div>
                        <div class="mt-2">
                            <img id="previewImage2" src="#" alt="Önizleme" class="rounded border d-none" width="200" />
                        </div>
                        <span asp-validation-for="BannerImage" class="text-danger small"></span>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-warning text-dark px-4">
                        <i class="bi bi-save me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Yeni görsel önizleme
        document.getElementById("imageInput").addEventListener("change", function (event) {
            const [file] = event.target.files;
            const preview = document.getElementById("previewImage");
            if (file) {
                preview.src = URL.createObjectURL(file);
                preview.classList.remove("d-none");
            } else {
                preview.classList.add("d-none");
            }
        });
         document.getElementById("imageInput2").addEventListener("change", function (event) {
            const [file] = event.target.files;
            const preview = document.getElementById("previewImage2");
            if (file) {
                preview.src = URL.createObjectURL(file);
                preview.classList.remove("d-none");
            } else {
                preview.classList.add("d-none");
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const editor = new Jodit('#AboutEditor', {
                height: 400,
                maxLength: 10000
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
