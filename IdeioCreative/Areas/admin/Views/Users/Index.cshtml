@model IEnumerable<User>

@{
    ViewData["Title"] = "Kullanıcılar";
}


<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-person-badge me-1"></i> Kullanıcılar
        </h2>
        <a class="btn btn-outline-success shadow-sm" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Kullanıcı Ekle
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table id="myTable" class="display table table-hover table-striped align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Username)</th>
                            <th>@Html.DisplayNameFor(model => model.password)</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                                <td>
                                    <span class="password-field" data-password="@item.password">••••••••</span>
                                    <button type="button" class="btn btn-sm btn-link toggle-password" title="Göster/Gizle">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group-vertical btn-group-sm" role="group">
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    .table img {
        transition: transform 0.2s ease;
    }

        .table img:hover {
            transform: scale(1.1);
        }

    .btn-group-vertical .btn {
        margin: 2px 0;
    }

</style>

@section Scripts
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".toggle-password").forEach(function (btn) {
                btn.addEventListener("click", function () {
                    const span = btn.previousElementSibling;
                    const icon = btn.querySelector("i");
                    if (span.innerText.includes("•")) {
                        // Şifreyi göster
                        span.innerText = span.getAttribute("data-password");
                        icon.classList.remove("bi-eye");
                        icon.classList.add("bi-eye-slash");
                    } else {
                        // Şifreyi gizle
                        span.innerText = "••••••••";
                        icon.classList.remove("bi-eye-slash");
                        icon.classList.add("bi-eye");
                    }
                });
            });
        });

        $(document).ready(function () {
            $('#myTable').DataTable({
                // Türkçe dil desteği
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json"
                }
            });
        });
    </script>

}
