@model Reference

@{
    ViewData["Title"] = "Yeni Referans Ekle";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-journal-plus me-2"></i>Yeni Referans Ekle</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ad Soyad giriniz" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check mt-4">
                            <input class="form-check-input" asp-for="IsHome" />
                            <label class="form-check-label fw-semibold">@Html.DisplayNameFor(model => model.IsHome)</label>
                        </div>
                    </div>
                   


                    <div class="col-md-12">
                        <label asp-for="Language" class="form-label fw-semibold"></label>
                        <select asp-for="Language" class="form-select" asp-items="Html.GetEnumSelectList<Language>()"></select>
                        <span asp-validation-for="Language" class="text-danger small"></span>
                    </div>



                    <div class="col-md-12">
                        <label asp-for="Image" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <input asp-for="Image" type="file" class="form-control" id="imageInput" />
                        </div>
                        <div class="mt-2">
                            <img id="previewImage" src="#" alt="Önizleme" class="rounded border d-none" width="200" />
                        </div>
                        <span asp-validation-for="Image" class="text-danger small"></span>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Görsel önizleme
        document.getElementById("imageInput").addEventListener("change", function (event) {
            const [file] = event.target.files;
            const preview = document.getElementById("previewImage");
            if (file) {
                preview.src = URL.createObjectURL(file);
                preview.classList.remove("d-none");
            } else {
                preview.classList.add("d-none");
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const editor = new Jodit('#AboutEditor', {
                height: 400,
                maxLength: 10000
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}